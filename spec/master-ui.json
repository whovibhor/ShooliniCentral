{
    "project": {
        "name": "ShooliniCentral",
        "version": "1.0.0",
        "updatedAt": "2025-09-22"
    },
    "description": "A central hub for Shoolini students with confessions, marketplace, events, lost & found, accommodation, and ride-sharing.",
    "theme": {
        "mode": "auto",
        "cssVarsPrefix": "--sc",
        "colors": {
            "primary": "#DC2626",
            "secondary": "#059669",
            "accent": "#10B981",
            "background": "#F8FAFC",
            "surface": "#FFFFFF",
            "cardBackground": "#FFFFFF",
            "text": "#1E293B",
            "mutedText": "#64748B",
            "border": "#E2E8F0",
            "danger": "#DC2626",
            "warning": "#F59E0B",
            "info": "#3B82F6",
            "success": "#16A34A",
            "status": {
                "pending": "#F59E0B",
                "approved": "#16A34A",
                "rejected": "#DC2626"
            }
        },
        "brand": {
            "primaryRed": "#DC2626",
            "secondaryGreen": "#059669",
            "neutralWhite": "#FFFFFF"
        },
        "brandGuidelines": {
            "emphasis": "subtle",
            "touchAreas": [
                "activeNavItem",
                "primaryButtons",
                "badgesAndStatus",
                "linksHover",
                "smallAccentsOnCards"
            ],
            "avoid": [
                "fullPageBackgrounds",
                "largeTextBlocks",
                "highSaturationOnLargeSurfaces"
            ]
        },
        "darkMode": {
            "background": "#0B1220",
            "surface": "#0F172A",
            "cardBackground": "#111827",
            "text": "#E5E7EB",
            "mutedText": "#9CA3AF",
            "border": "#1F2937"
        },
        "typography": {
            "headingFont": "Poppins, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Inter, sans-serif",
            "bodyFont": "Inter, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
            "sizes": {
                "xs": "12px",
                "sm": "14px",
                "base": "16px",
                "lg": "18px",
                "xl": "24px",
                "2xl": "32px",
                "3xl": "40px"
            },
            "weights": {
                "regular": 400,
                "medium": 500,
                "semibold": 600,
                "bold": 700
            },
            "lineHeights": {
                "tight": 1.2,
                "snug": 1.35,
                "normal": 1.5,
                "relaxed": 1.65
            }
        },
        "spacing": {
            "scale": [
                0,
                2,
                4,
                6,
                8,
                12,
                16,
                20,
                24,
                32,
                40,
                48,
                56,
                64
            ],
            "xs": "4px",
            "sm": "8px",
            "md": "16px",
            "lg": "24px",
            "xl": "32px",
            "2xl": "48px"
        },
        "radii": {
            "sm": "8px",
            "md": "12px",
            "lg": "16px",
            "xl": "24px",
            "full": "9999px"
        },
        "borders": {
            "hairline": "1px",
            "thin": "1px",
            "thick": "2px"
        },
        "shadows": {
            "sm": "0 1px 2px rgba(0,0,0,0.05)",
            "md": "0 2px 8px rgba(0,0,0,0.06)",
            "lg": "0 8px 24px rgba(0,0,0,0.08)"
        },
        "zIndex": {
            "base": 1,
            "header": 1000,
            "sidebar": 900,
            "dropdown": 1100,
            "toast": 1200,
            "modal": 2000
        },
        "breakpoints": {
            "xs": "375px",
            "sm": "640px",
            "md": "768px",
            "lg": "1024px",
            "xl": "1280px",
            "2xl": "1536px"
        },
        "transitions": {
            "durations": {
                "fast": "150ms",
                "normal": "250ms",
                "slow": "350ms"
            },
            "easing": {
                "inOut": "cubic-bezier(0.4, 0, 0.2, 1)",
                "out": "cubic-bezier(0, 0, 0.2, 1)",
                "in": "cubic-bezier(0.4, 0, 1, 1)"
            }
        }
    },
    "layout": {
        "header": {
            "visible": true,
            "height": "64px",
            "sticky": true,
            "elevation": "md",
            "elements": [
                "logo",
                "search",
                "profileIcon",
                "notifications"
            ],
            "mobile": {
                "collapseSearch": true
            }
        },
        "sidebar": {
            "visible": true,
            "width": "240px",
            "expandedWidth": "240px",
            "collapsible": true,
            "collapsedWidth": "72px",
            "showLabelsWhenExpanded": true,
            "iconsOnlyWhenCollapsed": true,
            "tooltipsOnCollapsed": true,
            "tooltipDelayMs": 150,
            "scrollable": true,
            "behavior": {
                "defaultState": "expanded",
                "stateByBreakpoint": {
                    "sm": "collapsed",
                    "md": "collapsed",
                    "lg": "expanded",
                    "xl": "expanded"
                }
            },
            "navigation": [
                {
                    "label": "Confessions",
                    "icon": "message-circle",
                    "route": "/confessions"
                },
                {
                    "label": "Marketplace",
                    "icon": "shopping-bag",
                    "route": "/marketplace"
                },
                {
                    "label": "Events & Notices",
                    "icon": "calendar",
                    "route": "/events"
                },
                {
                    "label": "Lost & Found",
                    "icon": "search",
                    "route": "/lost-found"
                },
                {
                    "label": "StayConnect",
                    "icon": "home",
                    "route": "/stayconnect"
                },
                {
                    "label": "Carpooling",
                    "icon": "car",
                    "route": "/carpooling"
                }
            ],
            "groups": [
                {
                    "heading": "Main",
                    "items": [
                        "/confessions",
                        "/marketplace",
                        "/events",
                        "/lost-found"
                    ]
                },
                {
                    "heading": "Campus",
                    "items": [
                        "/stayconnect",
                        "/carpooling"
                    ]
                }
            ],
            "toggle": {
                "hotkey": "Ctrl+B",
                "ariaLabel": "Toggle sidebar",
                "animation": {
                    "property": "width",
                    "duration": "200ms",
                    "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
                }
            }
        },
        "content": {
            "maxWidth": "1200px",
            "padding": "24px",
            "gridSystem": {
                "columns": 12,
                "gutter": "16px"
            },
            "cardStyle": {
                "borderRadius": "16px",
                "shadow": "0 2px 8px rgba(0,0,0,0.05)"
            }
        },
        "footer": {
            "visible": true,
            "height": "56px",
            "elevation": "sm",
            "elements": [
                "links",
                "copyright",
                "version"
            ]
        }
    },
    "templates": {
        "dashboard": {
            "layout": "feed+sidebar",
            "defaultPage": "confessions",
            "richTextEditor": true,
            "cards": true,
            "feed": {
                "infiniteScroll": true,
                "pageSize": 20,
                "adSlots": false
            }
        },
        "gridPage": {
            "layout": "card-grid",
            "examples": [
                "marketplace",
                "lost-found"
            ],
            "filterSearch": true,
            "sortOptions": [
                "latest",
                "popular"
            ],
            "card": {
                "imageAspectRatio": "4:3",
                "badges": true
            }
        },
        "listPage": {
            "layout": "vertical-list",
            "examples": [
                "events",
                "carpooling"
            ],
            "highlightImportant": true,
            "item": {
                "meta": [
                    "author",
                    "time",
                    "tags"
                ],
                "actions": [
                    "share"
                ]
            }
        },
        "formPage": {
            "layout": "form-centered",
            "sections": [
                "inputs",
                "attachments",
                "preview"
            ],
            "validationOnBlur": true
        },
        "detailPage": {
            "layout": "two-column",
            "left": "primaryContent",
            "right": "meta+actions"
        }
    },
    "components": {
        "button": {
            "sizes": {
                "sm": "32px",
                "md": "40px",
                "lg": "48px"
            },
            "variants": [
                "primary",
                "secondary",
                "ghost",
                "danger"
            ],
            "focusRing": {
                "width": "2px",
                "color": "#3B82F6"
            }
        },
        "input": {
            "height": "40px",
            "borderRadius": "12px",
            "placeholderColor": "#94A3B8"
        },
        "card": {
            "padding": "16px",
            "radius": "16px",
            "shadow": "md"
        },
        "badge": {
            "variants": {
                "pending": {
                    "bg": "#FEF3C7",
                    "fg": "#92400E"
                },
                "approved": {
                    "bg": "#DCFCE7",
                    "fg": "#166534"
                },
                "rejected": {
                    "bg": "#FEE2E2",
                    "fg": "#991B1B"
                }
            }
        },
        "toast": {
            "position": "top-right",
            "autoDismiss": true,
            "duration": 3000
        }
    },
    "interactions": {
        "hoverEffect": "scale+shadow",
        "clickEffect": {
            "type": "ripple",
            "color": "rgba(59,130,246,0.2)"
        },
        "animations": {
            "pageTransition": "fade",
            "cardLoad": "slide-up",
            "buttonHover": "color-shift"
        },
        "focus": {
            "ring": true,
            "ringColor": "#3B82F6",
            "ringWidth": 2
        },
        "reducedMotion": {
            "respect": true,
            "fallback": "fade"
        },
        "tooltips": {
            "enabled": true,
            "delayMs": 150,
            "placement": "right",
            "showOnCollapsedOnly": true
        }
    },
    "moderation": {
        "requiredFor": [
            "confessions",
            "marketplace",
            "lost-found",
            "stayconnect"
        ],
        "approvalTime": "within 24hrs",
        "statusTags": [
            "pending",
            "approved",
            "rejected"
        ],
        "roles": [
            "admin",
            "moderator"
        ],
        "auditTrail": true,
        "contentPolicies": {
            "maxLengths": {
                "confession": 2000,
                "marketplace.title": 120,
                "marketplace.description": 5000,
                "event.title": 140
            },
            "allowedHtml": [],
            "profanityFilter": true
        }
    },
    "validation": {
        "confessions": {
            "content": {
                "required": true,
                "max": 2000
            },
            "alias": {
                "max": 32
            }
        },
        "marketplace": {
            "title": {
                "required": true,
                "max": 120
            },
            "price": {
                "min": 0
            },
            "description": {
                "max": 5000
            },
            "images": {
                "maxCount": 5,
                "maxSizeMB": 3,
                "mime": [
                    "image/jpeg",
                    "image/png",
                    "image/webp"
                ]
            }
        },
        "events": {
            "title": {
                "required": true,
                "max": 140
            },
            "body": {
                "max": 8000
            },
            "dates": {
                "startBeforeEnd": true
            }
        },
        "rides": {
            "type": {
                "enum": [
                    "offer",
                    "request"
                ]
            },
            "ride_time": {
                "future": true
            },
            "seats": {
                "min": 1,
                "max": 8
            }
        }
    },
    "dataModels": {
        "Confession": {
            "id": "number",
            "content": "string",
            "alias": "string?",
            "status": "pending|approved|rejected",
            "created_at": "datetime"
        },
        "MarketplaceItem": {
            "id": "number",
            "title": "string",
            "price": "number",
            "description": "string",
            "category": "string",
            "contact": "string",
            "images": "string[]",
            "status": "pending|approved|rejected",
            "created_at": "datetime"
        },
        "Event": {
            "id": "number",
            "title": "string",
            "body": "string",
            "starts_at": "datetime",
            "ends_at": "datetime",
            "official": "boolean",
            "status": "pending|approved|rejected"
        },
        "LostFoundItem": {
            "id": "number",
            "type": "lost|found",
            "title": "string",
            "description": "string",
            "images": "string[]",
            "status": "pending|approved|rejected",
            "created_at": "datetime"
        },
        "StayConnectListing": {
            "id": "number",
            "title": "string",
            "location": "string",
            "budget": "number",
            "preferences": "string"
        },
        "Ride": {
            "id": "number",
            "type": "offer|request",
            "origin": "string",
            "destination": "string",
            "ride_time": "datetime",
            "seats": "number?",
            "contact": "string",
            "notes": "string?",
            "status": "pending|approved|rejected"
        }
    },
    "routes": {
        "default": "/confessions",
        "map": {
            "/confessions": "dashboard",
            "/marketplace": "gridPage",
            "/events": "listPage",
            "/lost-found": "gridPage",
            "/stayconnect": "gridPage",
            "/carpooling": "listPage"
        }
    },
    "performance": {
        "imageOptimization": {
            "maxWidth": "1080px",
            "lazyLoad": true,
            "compression": "medium"
        },
        "cache": {
            "enabled": true,
            "prefetchRoutes": [
                "/marketplace",
                "/events"
            ],
            "ttlSeconds": 300
        },
        "budgets": {
            "lcpMaxMs": 2500,
            "jsTotalKb": 150,
            "cssTotalKb": 50
        }
    },
    "accessibility": {
        "contrastMinimum": 4.5,
        "focusVisible": true,
        "hitTargetMin": {
            "width": 44,
            "height": 44
        },
        "skipLinks": true,
        "reducesMotion": true
    },
    "i18n": {
        "defaultLocale": "en-IN",
        "timezone": "Asia/Kolkata",
        "dateFormat": "dd MMM yyyy",
        "timeFormat": "HH:mm",
        "currency": "INR"
    },
    "icons": {
        "library": "lucide",
        "fallback": "heroicons",
        "size": 20
    },
    "security": {
        "cors": {
            "allowedOrigins": [
                "http://127.0.0.1:8000"
            ],
            "methods": [
                "GET",
                "POST",
                "PATCH",
                "DELETE"
            ],
            "credentials": true
        },
        "csrf": {
            "cookie": true
        },
        "xss": {
            "sanitizeHtml": true,
            "allowedTags": []
        },
        "uploads": {
            "maxImageMb": 3,
            "allowed": [
                "image/jpeg",
                "image/png",
                "image/webp"
            ]
        }
    },
    "telemetry": {
        "enabled": false,
        "events": [
            "page_view",
            "click",
            "submit"
        ],
        "pii": {
            "strip": true
        }
    },
    "notifications": {
        "toast": {
            "position": "top-right",
            "duration": 3000,
            "types": [
                "success",
                "error",
                "info"
            ]
        }
    },
    "states": {
        "empty": {
            "title": "Nothing here yet",
            "subtitle": "Check back later or adjust filters."
        },
        "error": {
            "title": "Something went wrong",
            "subtitle": "Please try again."
        },
        "loading": {
            "skeleton": true
        }
    }
}